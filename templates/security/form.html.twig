{% extends 'base3.html.twig' %}
{% block body %}
<style>
    form{
        width:50vw;
        margin:auto;
        height:60vh;
        text-align:center;
    }
    div{
        text-align:center;
    }
    input{
        display:block;
        width:200px;
        border-radius:20px;
        margin:auto;
        margin-top:20px;
        margin-bottom:20px;
    }

    button{
        width:100px;
        border-radius:20px;
        margin:20px;
    }
</style>
<h1>Registration!</h1>
{{ form_start(form) }}
 {{ form_row(form.username) }}
 {{ form_row(form.email) }}
 {{ form_row(form.plainPassword.first) }}
 {{ form_row(form.plainPassword.second) }}
 <button type="submit">Register!</button>
{{ form_end(form) }}
{% endblock %}